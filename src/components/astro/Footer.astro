---
// src/components/astro/Footer.astro
import { slugify } from '@/utils/slugify';
import { getUniqueCategories } from '@/utils/getUniqueCategories';

const year = new Date().getFullYear();
const categories = await getUniqueCategories();
const topCategories = categories.slice(0, 5);
---

<footer class="bg-gray-50 border-t border-gray-200 mt-20">
  <div class="max-w-7xl mx-auto px-6 sm:px-8 lg:px-10 py-16">
    <div class="grid grid-cols-2 md:grid-cols-12 gap-10 text-sm">
      
      <!-- Brand Column (wider on mobile) -->
      <div class="col-span-2 md:col-span-4">
        <a href="/" class="flex items-center gap-3 mb-6" aria-label="Eliphany Home">
          <img src="/logo1.svg" alt="Eliphany" class="h-10 w-auto" />
          <span class="font-bold text-emerald-600 text-xl">Eliphany</span>
        </a>
        <p class="text-gray-600 leading-relaxed">
          Premium skincare supplements curated for radiant skin. 
          Order instantly via WhatsApp — delivered across UAE.
        </p>
        <a 
          href="https://wa.me/971501234567" 
          target="_blank" 
          rel="noopener"
          class="inline-flex items-center gap-2 mt-6 text-emerald-600 font-medium hover:text-emerald-700 transition"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.297-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.695.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893A11.821 11.821 0 0020.885 3.488"/>
          </svg>
          Chat with us
        </a>
      </div>

      <!-- Shop Categories -->
      <div class="md:col-span-2">
        <h3 class="font-bold text-gray-900 mb-5 uppercase tracking-wider text-xs">Shop</h3>
        <ul class="space-y-3">
          {topCategories.map(cat => (
            <li>
              <a href={`/category/${slugify(cat)}`} class="text-gray-600 hover:text-emerald-600 transition font-medium">
                {cat}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Company -->
      <div class="md:col-span-2">
        <h3 class="font-bold text-gray-900 mb-5 uppercase tracking-wider text-xs">Company</h3>
        <ul class="space-y-3">
          <li><a href="/about" class="text-gray-600 hover:text-emerald-600 transition font-medium">About Us</a></li>
          <li><a href="/contact" class="text-gray-600 hover:text-emerald-600 transition font-medium">Contact</a></li>
          <li><a href="/privacy-policy" class="text-gray-600 hover:text-emerald-600 transition font-medium">Privacy Policy</a></li>
        </ul>
      </div>

      <!-- Support -->
      <div class="md:col-span-4">
        <h3 class="font-bold text-gray-900 mb-5 uppercase tracking-wider text-xs">We're Here to Help</h3>
        <div class="space-y-4 text-gray-600">
          <p class="flex items-center gap-2">
            <span class="text-emerald-600">✓</span> Mon–Sat: 9 AM – 6 PM
          </p>
          <p class="flex items-center gap-2">
            <span class="text-emerald-600">✓</span> Same-day dispatch (before 2 PM)
          </p>
          <p class="flex items-center gap-2">
            <span class="text-emerald-600">✓</span> Free delivery over AED 300
          </p>
        </div>
        <a 
          href="https://wa.me/971501234567" 
          target="_blank" 
          rel="noopener"
          class="inline-block mt-6 bg-gradient-to-r from-emerald-500 to-emerald-600 text-white font-bold py-3 px-6 rounded-xl shadow-lg hover:shadow-xl transition-all"
        >
          WhatsApp Us
        </a>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div class="mt-16 pt-8 border-t border-gray-300 flex flex-col md:flex-row justify-center items-center gap-3 text-xs text-gray-500">
      <p>© {year} Eliphany. All rights reserved.</p>
      <p class="hidden md:inline">·</p>
      <p>Made with <span class="text-red-500">♥</span> in Nigeria</p>
    </div>
  </div>
</footer>

<style>
  /* Smooth hover for all footer links */
  footer a {
    transition: color 0.2s ease;
  }
</style>