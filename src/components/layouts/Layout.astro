---
import BaseHead from '../astro/BaseHead.astro';
import Navbar from '../astro/Navbar.astro';
import Footer from '../astro/Footer.astro';
import '/src/styles/global.css';

export interface Props {
  title: string;
  description?: string;
  image?: string;
}

const { title, description = 'Skin-care supplements curated for you â€“ contact us on WhatsApp.', image = '/logo1.svg' } = Astro.props;

// Set site URL for Open Graph tags
const siteUrl = Astro.url.origin; // Will use localhost:4321 during dev, update for production
const currentUrl = siteUrl + Astro.url.pathname;
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={title} description={description} image={image} />
    
    <!-- Open Graph Meta Tags -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={`${siteUrl}${image}`} />
    <meta property="og:url" content={currentUrl} />
    <meta property="og:type" content="website" />
    <meta property="og:site_name" content="Eliphany" />
    
    <!-- Twitter Card Meta Tags -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={`${siteUrl}${image}`} />
  </head>

  <body class="min-h-screen flex flex-col bg-gray-50 text-gray-800">
    <Navbar />

    <main id="main-content" class="flex-1 w-full">
      <slot />
    </main>

    <Footer />

    <!-- React islands hydrate themselves where needed -->
    <script>
      import '../react/ScrollReveal';
    </script>
  </body>
</html>

<style>
  /* tiny tweak to remove Safari tap glow */
  html {
    -webkit-tap-highlight-color: transparent;
  }
</style>