---
import Layout from '../components/layouts/Layout.astro';
import { sanityClient, urlFor } from '../lib/sanity';

const query = `*[_type == "aboutSettings"][0]`;
const aboutSettings = await sanityClient.fetch(query);

const pageTitle = aboutSettings?.pageTitle || 'About Us | Eliphany';
const heroTitle = aboutSettings?.heroTitle || 'About Eliphany';
const introText = aboutSettings?.introText || [];
const founderImage = aboutSettings?.founderImage;
const whatsappButtonText = aboutSettings?.whatsappButtonText || 'Chat with us on WhatsApp';

// Helper function to serialize portable text without React
function serializePortableText(blocks) {
  if (!blocks || !Array.isArray(blocks)) return [];
  
  return blocks.map(block => {
    if (block._type !== 'block' || !block.children) return '';
    
    return block.children
      .filter(child => child._type === 'span')
      .map(span => span.text)
      .join('');
  }).filter(text => text.length > 0);
}

const paragraphs = serializePortableText(introText);
---

<Layout title={pageTitle} description="Learn why we curate premium skin-care supplements and how to reach us on WhatsApp.">
  <section class="py-16 px-4 max-w-4xl mx-auto">
    <h1 class="text-4xl font-bold text-gray-900 mb-6">{heroTitle}</h1>

    <div class="grid md:grid-cols-3 gap-8 items-start">
      <div class="md:col-span-2 space-y-4 text-gray-700">
        {paragraphs.length > 0 ? (
          paragraphs.map((text, index) => (
            <p key={index} class="mb-4">{text}</p>
          ))
        ) : (
          /* Fallback content */
          <>
            <p class="mb-4">Eliphany was born from a simple belief: healthy, radiant skin should be accessible, honest, and fuss-free.</p>
            <p class="mb-4">Every product you see here has been tested by our team, approved by dermatologists we trust, and priced transparently.</p>
            <p class="mb-4">Based in Dubai, we ship across the UAE within 24h and reply to every WhatsApp query in under two hours.</p>
          </>
        )}
      </div>

      <figure class="rounded-2xl overflow-hidden shadow-lg">
        <img
          src={founderImage ? urlFor(founderImage).url() : 'https://picsum.photos/seed/about-portrait/400/500'}
