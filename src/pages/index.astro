---
// src/pages/index.astro
import Layout from '../components/layouts/Layout.astro';
import ProductCard from '../components/astro/ProductCard.astro';
import { sanityClient, urlFor } from '@/lib/sanity';

/* ---------- fetch Home Settings ---------- */
const homeSettings = await sanityClient.fetch(`*[_type == "homeSettings"][0]`);

/* ---------- fetch 6 newest products ---------- */
const products = await sanityClient.fetch(
  `*[_type == "newArrivalProduct" && isNew == true] | order(_createdAt desc) [0...6]`
);

/* ---------- map Sanity → card shape ---------- */
const displayedProducts = products.map((p: any) => ({
  id: p.id,
  name: p.name,
  shortDescription: p.shortDescription,
  image: { href: urlFor(p.mainImage).width(800).quality(80).url() },
  category_1_text: p.category,
  isNew: p.isNew,
}));


/* ---------- Instagram images ---------- */
const igImages = (homeSettings?.instagramImages || []).map((img: any) =>
  urlFor(img).width(400).height(400).quality(80).url()
);
const igHandle = homeSettings?.instagramHandle || 'eliphany_skin';
const igUrl = homeSettings?.instagramUrl || `https://instagram.com/${igHandle}`;
---

<Layout title="Eliphany | Skin-Care Supplements" description="Curated skin-care supplements – contact us on WhatsApp for orders.">
  <!-- HERO -->
  <section class="relative h-[60vh] md:h-[70vh] flex items-center justify-center text-white">
    <div class="absolute inset-0 bg-gradient-to-r from-emerald-600 to-emerald-400"></div>
    <img 
      src={urlFor(homeSettings?.heroBackgroundImage).width(1920).height(800).quality(80).url() || "https://picsum.photos/seed/hero/1920/800"} 
      alt="" 
      class="absolute inset-0 w-full h-full object-cover opacity-30" 
    />
    <div class="relative text-center px-4 max-w-3xl">
      <h1 class="text-4xl md:text-6xl font-bold mb-4">
        {homeSettings?.heroHeadline || 'Radiant Skin Starts Here'}
      </h1>
      <p class="text-lg md:text-xl mb-6">
        {homeSettings?.heroSubline || 'Premium supplements, honest prices – message us on WhatsApp.'}
      </p>
      <a href="https://wa.me/971501234567?text=Hi! I saw your website and I'd like to order." class="btn-whatsapp">
        <span>Order on WhatsApp</span>
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.67-1.612-.916-2.207-.242-.579-.487-.5-.67-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-2.3 4.7H7.628c-.704 0-1.277-.573-1.277-1.277V5.277C6.351 4.573 6.924 4 7.628 4h8.744c.704 0 1.277.573 1.277 1.277v12.146c0 .704-.573 1.277-1.277 1.277"/></svg>
      </a>
    </div>
  </section>

  <!-- NEW ARRIVALS -->
  <section class="py-16 px-10 sm:px-8 lg:px-4 max-w-7xl mx-auto">
    <h2 class="text-3xl font-bold text-gray-900 mb-8">New Arrivals</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 sm:gap-8">
      {displayedProducts.map(p => <ProductCard product={p} />)}
    </div>
  </section>

<!-- INSTAGRAM -->
  <section class="py-16 px-4 bg-white">
    <div class="max-w-5xl mx-auto text-center">
      <h2 class="text-3xl font-bold text-gray-900 mb-2">Follow Us on Instagram</h2>
      <p class="text-gray-600 mb-8">@{igHandle}</p>
      <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
        {igImages.map((url, i) => (
          <a href={igUrl} target="_blank" rel="noopener" class="block rounded-lg overflow-hidden shadow hover:shadow-lg transition">
            <img src={url} alt="" class="w-full h-full object-cover" />
          </a>
        ))}
      </div>
    </div>
  </section>
</Layout>