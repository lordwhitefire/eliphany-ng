---
import Layout from '../components/layouts/Layout.astro';
import ProductCard from '../components/astro/ProductCard.astro';
import { getUniqueCategories } from '@/utils/getUniqueCategories';
import { slugify } from '@/utils/slugify';

// TODO: replace with real fetch once products.json is wired
const fakeProducts = Array.from({ length: 6 }, (_, i) => ({
  id: `product-00${i + 1}`,
  name: `Glow Serum ${i + 1}`,
  shortDescription: 'Hydrating vitamin-C booster for radiant skin.',
  image: {
    dataThumb: `https://picsum.photos/seed/p${i}/400/400`
