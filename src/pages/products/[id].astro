---
import Layout from '../../layouts/Layout.astro';
import BreadCrumb from '../../../components/astro/BreadCrumb.astro';
import { ImageGallery } from '../../../components/react/ImageGallery';
import { whatsappMessage } from '@/utils/whatsappMessage';
import { slugify } from '@/utils/slugify';
import products from '@/data/products.json';

export async function getStaticPaths() {
  return products.map(p => ({ params: { id: p.id } }));
}

const { id } = Astro.params;
const product = products.find(p => p.id === id)!;

const title = `${product.name} | Eliphany`;
const description = product.shortDescription || 'Premium skin-care supplement.';
---

<Layout {title} {description} image={product.image.src}>
  <section class="py-8 px-4 max-w-6xl mx-auto">
    <BreadCrumb
      items={[
        { label: 'Home', href: '/' },
        { label: product.category_1_text, href: `/category/${slugify(product.category_1_text)}` },
        { label: product.name }
      ]}
    />

    <div class="grid md:grid-cols-2 gap-8 lg:gap-12">
      <!-- Gallery -->
      <div class="space-y-4">
        <ImageGallery
          client:load
          images={[product.image.src, product.image.href]} /* 600w + full res */
        />
      </div>

      <!-- Info -->
      <div class="flex flex-col gap-6">
        <div>
          <h1 class="text-3xl font-bold text-gray-900">{product.name}</h1>
          <p class="mt-2 text-gray-600">{product.shortDescription}</p>
        </div>

        <div class="flex flex-wrap gap-2">
          <span class="text-xs bg-emerald-100 text-emerald-700 px-3 py-1 rounded-full">
            {product.category_1_text}
          </span>
          {product.tag_1_text && (
            <span class="text-xs bg-sky-100 text-sky-700 px-3 py-1 rounded-full">
              {product.tag_1_text}
            </span>
          )}
        </div>

        {/* Price placeholder */}
        <div class="text-2xl font-semibold text-gray-900">Contact for price</div>

        {/* Sticky WhatsApp CTA */}
        <a
          href={`https://wa.me/971501234567?text=${whatsappMessage(product)}`}
          target="_blank"
          rel="noopener"
          class="btn-whatsapp w-full md:w-auto inline-flex items-center justify-center gap-2"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.67-1.612-.916-2.207-.242-.579-.487-.5-.67-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-2.3 4.7H7.628c-.704 0-1.277-.573-1.277-1.277V5.277C6.351 4.573 6.924 4 7.628 4h8.744c.704 0 1.277.573 1.277 1.277v12.146c0 .704-.573 1.277-1.277 1.277"/>
          </svg>
          Ask Price on WhatsApp
        </a>

        {/* Long description */}
        <div class="prose prose-sm text-gray-700">
          <h2 class="text-xl font-semibold text-gray-900">Description</h2>
          <p>{product.description}</p>
        </div>
      </div>
    </div>
  </section>
</Layout>